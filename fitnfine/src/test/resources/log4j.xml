<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>

	<!-- Application logger -->

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.beans">
		<level value="error" />
	</logger>

	<logger name="org.hibernate.tool.hbm2ddl">
		<level value="fatal" />
	</logger>

	<logger name="org.hibernate">
		<level value="error" />
	</logger>

	<logger name="org.hibernate.cache">
		<level value="error" />
	</logger>

	<logger name="net.sf.ehcache">
		<level value="error" />
	</logger>

	<logger name="com.googlecode">
		<level value="error" />
	</logger>

	<logger name="org.springframework.jdbc">
		<level value="error" />
	</logger>

	<logger name="org.springframework.transaction">
		<level value="error" />
	</logger>

	<logger name="org.springframework.orm">
		<level value="error" />
	</logger>

	<logger name="org.springframework.web">
		<level value="error" />
	</logger>

	<logger name="org.springframework.webflow">
		<level value="error" />
	</logger>

	<logger name="org.springframework.beans.factory.parsing">
		<level value="error" />
	</logger>

	<logger name="org.junit">
		<level value="error" />
	</logger>

	<logger name="com.sun.jersey">
		<level value="error" />
	</logger>

	<logger name="com.sun.jersey.test">
		<level value="error" />
	</logger>
	
	<logger name="com.sun.grizzly">
		<level value="fatal"/>
	</logger>

	<logger name="com.travel.agent">
		<level value="info" />
	</logger>

	<logger name="org.springframework.cache">
		<level value="error" />
	</logger>

	<logger name="net.sf">
		<level value="error" />
	</logger>
	<!-- Root Logger -->
	<root>
		<priority value="error" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>
